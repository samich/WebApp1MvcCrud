@model List<WebApp1MvcCrud.Models.Student>

<div class="container py-5">
    <div class="container">
        <h1>Students List</h1>
    </div>
</div>

<div class="container">

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
               <tr>
                    <th>Id</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Age</th>
                    <th>Grade</th>
                    <th>Registration Date</th>
                    <th></th>
               </tr>
           </thead>
           <tbody>
               @foreach (var student in Model)
               {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Age</td>
                        <td>@student.Grade</td>
                        <td>@student.RegDate.ToString("MM/dd/yyyy")</td>
                        <td><a asp-area="" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
                    </tr>
               }
            </tbody>
       </table>    
    }
    else
    {
        
    }
</div>
