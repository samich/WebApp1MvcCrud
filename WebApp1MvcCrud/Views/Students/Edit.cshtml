@{
}

<div class="container mt-4">
    <h1>Edit Student</h1>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" readonly asp-for="Id"/>
        </div>

        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" asp-for="FirstName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" asp-for="LastName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Age</label>
            <input type="text" class="form-control" id="age" asp-for="Age" />
        </div>

        <div class="mb-3">
            <label class="form-label">Grade</label>
            <input type="text" class="form-control" id="grade" asp-for="Grade" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Update</button>
        </div>

    </form>

</div>

